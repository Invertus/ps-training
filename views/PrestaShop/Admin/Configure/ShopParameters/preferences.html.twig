    <label class="form-control-label">Shop motto</label>
    <div class="col-sm">
      {{ form_errors(form.shop_motto) }}
      {{ form_widget(form.shop_motto) }}
      <small class="form-text">Motto will be showed to your customers</small>
    </div>
  </div>

  {{ form_rest(form) }}
{% endblock %}
